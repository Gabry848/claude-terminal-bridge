{
  "name": "claude-terminal-bridge",
  "displayName": "Claude Terminal Bridge",
  "description": "Let Claude control your VSCode terminal via MCP",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-terminal-bridge.connect",
        "title": "Claude Terminal Bridge: Start WebSocket Server"
      },
      {
        "command": "claude-terminal-bridge.disconnect",
        "title": "Claude Terminal Bridge: Stop WebSocket Server"
      },
      {
        "command": "claude-terminal-bridge.status",
        "title": "Claude Terminal Bridge: Show Connection Status"
      }
    ],
    "configuration": {
      "title": "Claude Terminal Bridge",
      "properties": {
        "claudeTerminalBridge.mcpServerUrl": {
          "type": "string",
          "default": "ws://localhost:3000",
          "description": "WebSocket server URL (only port is used)"
        },
        "claudeTerminalBridge.autoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start WebSocket server on startup"
        },
        "claudeTerminalBridge.silentAutoConnect": {
          "type": "boolean",
          "default": true,
          "description": "Don't show errors when auto-connect fails (only show success messages)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
